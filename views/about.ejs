<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <h1>Techla Blog</h1>

      <%- include('./partials/nav.ejs') %>

    <h1>Meet the Team</h1>

      <% for (const member of aboutUs) { %>

    <div class="team-member">
      <% if (member.image) { %>
      <img src="<%= member.image %>" alt="<%= member.name %>">
      <% } %>

      <h2><%= member.name %></h2>
      <h3><%= member.title %></h3>
      <p><%= member.description %></p>

      <% if (member.socialLinks) { %>

        <ul class="social-links">
          <% if (member.socialLinks.linkedin) { %>
            <li class="links"><a href="<%= member.socialLinks.linkedin %>">LinkedIn</a></li>
          <% } %>
          <% if (member.socialLinks.twitter) { %>
            <li class="links"><a href="<%= member.socialLinks.twitter %>">Twitter</a></li>
          <% } %>
        </ul>
        
      <% } %>
    </div>
  <% } %>
  
  <%- include('./partials/footer.ejs') %>
</body>
</html>